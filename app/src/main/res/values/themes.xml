<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordsFactory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Text styles -->
    <style name="Base.Widget.MaterialComponents.TextView.HeadingH1Text">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32dp</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.HeadingH2Text">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26dp</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ParagraphMediumText">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.ButtonMediumText">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.MaterialComponents.Button.ButtonSmallText">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <!-- -->

    <!-- Button styles -->
    <style name="Widget.MaterialComponents.Button.ButtonMediumText.MediumButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Widget.MaterialComponents.Button.ButtonSmallText.SmallButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <!-- -->

    <!-- Text Input Layout -->
    <style name="Widget.Design.TextInputEditText.MyTextInput">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ParagraphMediumText.MyTextInputEditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>
    <!-- -->
</resources>