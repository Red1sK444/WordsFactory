<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordsFactory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="Base.Widget.MaterialComponents.TextView.HeadingH1Text">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32dp</item>
        <item name="android:letterSpacing">-0.5</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.HeadingH2Text">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26dp</item>
        <item name="android:letterSpacing">-0.5</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ParagraphMediumText">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ButtonMediumText">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ButtonSmallText">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16dp</item>
    </style>

</resources>