<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemViewPagerImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/itemViewPagerTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/img_splash_screen" />

    <TextView
        android:id="@+id/itemViewPagerTitleTextView"
        style="@style/Base.Widget.MaterialComponents.TextView.HeadingH1Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:maxLines="2"
        android:minLines="2"
        android:textAlignment="center"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toTopOf="@+id/itemViewPagerDescriptionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemViewPagerImageView"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/itemViewPagerDescriptionTextView"
        style="@style/Base.Widget.MaterialComponents.TextView.ParagraphMediumText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minLines="3"
        android:text="@string/onboarding_intro_description"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemViewPagerTitleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>